@model PasswordChecker.MVC.Models.User.EditUserViewModel

@{
	ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>

<form asp-action="Edit" method="post" class="mt-3">
	@Html.AntiForgeryToken()
	<input type="hidden" asp-for="Id" />

	<div class="mb-3">
		<label asp-for="Varsta" class="form-label"></label>
		<input asp-for="Varsta" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="Gen" class="form-label"></label>
		<select asp-for="Gen" class="form-select">
			<option value="">Select</option>
			<option value="M">Masculin</option>
			<option value="F">Feminin</option>
		</select>
		<span asp-validation-for="Gen" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="Status" class="form-label"></label>
		<select asp-for="Status" class="form-select">
			<option value="ACTIVE">ACTIVE</option>
			<option value="INACTIVE">INACTIVE</option>
			<option value="BLOCKED">BLOCKED</option>
		</select>
	</div>

	<div class="mb-3">
		<label asp-for="Role" class="form-label"></label>
		<select asp-for="Role" class="form-select">
			<option value="ADMIN">ADMIN</option>
			<option value="CUSTOMER">CUSTOMER</option>
		</select>
	</div>

	<button type="submit" class="btn btn-success">Save</button>
	<a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
