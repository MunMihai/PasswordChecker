@model PasswordChecker.MVC.Models.Subscription.CreateSubscriptionViewModel

@{
    ViewData["Title"] = "Create Subscription";
}

<h2>Create Subscription</h2>

<form asp-action="Create" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="UserId" class="form-label"></label>
        <select asp-for="UserId"
                class="form-select"
                asp-items="ViewBag.Users">
            <option value="">Select user</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PlanId" class="form-label"></label>
        <select asp-for="PlanId"
                class="form-select"
                asp-items="ViewBag.Plans">
            <option value="">Select plan</option>
        </select>
        <span asp-validation-for="PlanId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StartDate" class="form-label"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
