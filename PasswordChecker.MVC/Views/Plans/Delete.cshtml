@model PasswordChecker.MVC.Models.Plan.PlanViewModel
@{
    ViewData["Title"] = "Delete Plan";
    var canDelete = ViewBag.CanDelete as bool? ?? false;
    var usersUsingPlan = ViewBag.UsersUsingPlan as List<string> ?? new List<string>();
}

<h2>Delete Plan</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!canDelete)
{
    <div class="alert alert-danger" role="alert">
        <h5 class="alert-heading">Nu se poate șterge planul!</h5>
        <p>Planul nu poate fi șters deoarece este utilizat de următorii utilizatori:</p>
        <hr>
        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#usersModal">
            Vezi utilizatorii care folosesc planul (@usersUsingPlan.Count)
        </button>
    </div>
}
else
{
    <h4>Are you sure you want to delete this plan?</h4>
}

<hr />

<dl class="row">
    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Price</dt>
    <dd class="col-sm-9">@Model.Price</dd>

    <dt class="col-sm-3">Max Checks / Day</dt>
    <dd class="col-sm-9">@Model.MaxChecksPerDay</dd>

    <dt class="col-sm-3">Active</dt>
    <dd class="col-sm-9">@Model.IsActive</dd>
</dl>

@if (canDelete)
{
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
}
else
{
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
}

<!-- Modal pentru utilizatori -->
<div class="modal fade" id="usersModal" tabindex="-1" aria-labelledby="usersModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="usersModalLabel">Utilizatori care folosesc planul</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3"><strong>Planul "@Model.Name" este utilizat de următorii utilizatori:</strong></p>
                @if (usersUsingPlan.Any())
                {
                    <ul class="list-group">
                        @foreach (var user in usersUsingPlan)
                        {
                            <li class="list-group-item">@user</li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">Nu s-au găsit utilizatori.</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Închide</button>
            </div>
        </div>
    </div>
</div>
