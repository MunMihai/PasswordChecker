@model PasswordChecker.MVC.Models.Plan.PlanViewModel

@{
    ViewData["Title"] = "Delete Plan";
}

<h2>Delete Plan</h2>

<h4>Are you sure you want to delete this plan?</h4>

<hr />

<dl class="row">
    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Price</dt>
    <dd class="col-sm-9">@Model.Price</dd>

    <dt class="col-sm-3">Max Checks / Day</dt>
    <dd class="col-sm-9">@Model.MaxChecksPerDay</dd>

    <dt class="col-sm-3">Active</dt>
    <dd class="col-sm-9">@Model.IsActive</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
