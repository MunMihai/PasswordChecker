@model PasswordChecker.MVC.Models.Plan.EditPlanViewModel

@{
    ViewData["Title"] = "Edit Plan";
}

<h2>Edit Plan</h2>

<form asp-action="Edit" method="post">
    @* ID-ul trebuie transmis, dar nu afișat *@
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="MaxChecksPerDay" class="form-label"></label>
        <input asp-for="MaxChecksPerDay" class="form-control" />
        <span asp-validation-for="MaxChecksPerDay" class="text-danger"></span>
    </div>

    <div class="form-group form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
