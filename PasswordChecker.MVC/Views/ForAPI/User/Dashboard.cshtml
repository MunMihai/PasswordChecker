@model PasswordChecker.MVC.Models.User.UserViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">

    <!-- HEADER -->
    <div class="mb-4">
        <h2 class="fw-bold">Dashboard</h2>
        <p class="text-muted">
            Welcome back, <strong>@Model.Email</strong>
        </p>
    </div>

    <div class="row g-4">

        <!-- USER INFO -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light fw-semibold">
                    User Information
                </div>
                <div class="card-body">
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p>
                        <strong>Age:</strong>
                        @(Model.Varsta?.ToString() ?? "Not set")
                    </p>
                    <p>
                        <strong>Gender:</strong>
                        @(Model.Gen ?? "Not set")
                    </p>
                    <p>
                        <strong>Status:</strong>
                        <span class="badge bg-success">@Model.Status</span>
                    </p>
                </div>
            </div>
        </div>

        <!-- ACCOUNT INFO -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light fw-semibold">
                    Account Overview
                </div>
                <div class="card-body text-center">
                    <h4 class="mb-2">Balance</h4>
                    <h2 class="text-success fw-bold">
                        @Model.Balance.ToString("0.00") $
                    </h2>

                    <a asp-action="AddBalance"
                       class="btn btn-outline-success mt-3">
                        Add Balance
                    </a>
                </div>
            </div>
        </div>

        <!-- ACTIONS -->
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light fw-semibold">
                    Actions
                </div>
                <div class="card-body text-center">

                    <a asp-controller="Plans"
                       asp-action="Select"
                       class="btn btn-primary btn-lg me-3">
                        Choose a Plan
                    </a>

                    <a asp-controller="PasswordChecks"
                       asp-action="Index"
                       class="btn btn-outline-primary btn-lg">
                        Check Password
                    </a>

                </div>
            </div>
        </div>

    </div>
</div>
