<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - PasswordChecker</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                PasswordChecker
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            Home
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Plans" asp-action="Select">
                            Plans
                        </a>
                    </li>

                    @if (Context.Session.GetString("UserId") != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Users" asp-action="Index">
                                Users
                            </a>
                        </li>
                    }
                </ul>

                <!-- RIGHT SIDE NAV -->
                <ul class="navbar-nav ms-auto">
                    @if (Context.Session.GetString("UserId") != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Users" asp-action="Dashboard">
                                👤 Profil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning"
                               asp-controller="Users"
                               asp-action="Logout">
                                Logout
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link btn btn-success text-white px-3"
                               asp-controller="Users"
                               asp-action="Identify">
                                Get Started
                            </a>
                        </li>
                    }
                </ul>
            </div>

        </div>
    </nav>

    <!-- PAGE CONTENT -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - PasswordChecker
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
