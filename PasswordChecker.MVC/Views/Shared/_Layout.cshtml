<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - PasswordChecker Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="bg-light">

    <div class="d-flex" style="min-height:100vh">

        <!-- SIDEBAR -->
        <aside class="bg-dark text-white p-3" style="width:260px;">
            <h4 class="mb-4 text-warning">PasswordChecker</h4>

            <ul class="nav nav-pills flex-column gap-1">

                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index"
                       class="nav-link text-white">
                        Dashboard
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Users" asp-action="Index"
                       class="nav-link text-white">
                        Users
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Plans" asp-action="Index"
                       class="nav-link text-white">
                        Plans
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Subscriptions" asp-action="Index"
                       class="nav-link text-white">
                        Subscriptions
                    </a>
                </li>

            </ul>

            <hr class="text-secondary" />

            <!-- LOGOUT -->
            <form asp-controller="Account"
                  asp-action="Logout"
                  method="post">
                @Html.AntiForgeryToken()
                <button type="submit"
                        class="btn btn-outline-warning w-100 mt-2">
                    Logout
                </button>
            </form>
        </aside>

        <!-- MAIN CONTENT -->
        <main class="flex-fill p-4">
            @RenderBody()
        </main>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
